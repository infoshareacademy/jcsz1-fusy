@model WalutyBusinessLogic.Models.CurrenciesComparatorModel;
@{
    ViewData["Title"] = "CurrenciesComparator";
}

<h1>Currencies Comparator</h1>
<br />
<div class="container">
    <form asp-controller="CurrencyComparision" asp-action="ShowResultCurrencyComparision" method="post">
        <div class="form-group">
            <div class="form-control">
                <label>Date          </label>
                <input type="date" asp-for="Date" name="Date" />
                <span asp-validation-for="Date" class="text-danger"></span>
                @if (ViewBag.DateRangeForComparison != null)
                {
                <span class="text-danger">@ViewBag.DateRangeForComparison</span>
                }
            </div>
            <div class="form-control">
                <label>First currency</label>
                <select asp-for="FirstCurrencyCode">
                    <partial name="AllCurrencyListSelect">
                </select>
                <span asp-validation-for="FirstCurrencyCode" class="text-danger"></span>
                @if (ViewBag.ResultChekingCurrencyNameInComparision != null)
                {
                <span class="text-danger">@ViewBag.ResultChekingCurrencyNameInComparision</span>
                }
            </div>
            <div class="form-control">
                <label>Second currency</label>
                <select asp-for="SecondCurrencyCode">
                    <partial name="AllCurrencyListSelect">
                </select>
                <span asp-validation-for="SecondCurrencyCode" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Show</button>
    </form>
</div>